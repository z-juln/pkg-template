{
  "compilerOptions": {
    "noEmit": true,
    "pretty": true,
    "module": "commonjs",
    "target": "es6",
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ]
  },
  "include": [
    "src",
    "**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "scripts"
  ]
}